<h2>Votaciones</h2>
<hr />
<br />
<table class="table table-hover table-triped table-bordered">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="2">
        <%= link_to new_polling_path, :class=>"btn btn-success btn-block" do%>
          <span class="glyphicon glyphicon-plus-sign"></span> Nueva
        <%end%>
      </th>
    </tr>
  </thead>

  <tbody>
    <% @pollings.each do |polling| %>
      <tr>
        <td><%= polling.name %></td>
        <td class="center">
            <%= link_to polling, :class=> 'table-action' do%><span class="glyphicon glyphicon-eye-open"></span><%end%>
        </td>
        <td class="center">
        	<%= link_to polling, method: :delete, data: { confirm: '¿Está seguro que desea eliminar?' } , :class=> 'table-action' do%><span class="glyphicon glyphicon-remove"></span><% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>