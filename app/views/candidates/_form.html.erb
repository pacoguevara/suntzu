<%= form_for(@candidate) do |f| %>
  <% if @candidate.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@candidate.errors.count, "error") %> prohibited this candidate from being saved:</h2>
      <ul>
      <% @candidate.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label 'Nombre' %><br>
    <%= f.text_field :name, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label 'Edad' %><br>
    <%= f.number_field :age, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label 'Sexo' %><br>
    <%= f.collection_radio_buttons :gender, [['H', 'Hombre'] ,['M', 'Mujer']], :first, :last %>
  </div>
  <div class="actions">
    <%= f.submit "Crear Candidato", :class=>"btn btn-primary"%>
    <%= link_to "Regresar", :back, :class=>"btn btn-primary"%>
  </div>
<% end %>