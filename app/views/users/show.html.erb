<div class="row">
	<div class="col-md-12">
		<h3>Registro de Votaciones</h3>
	</div>
	<%= simple_form_for Vote.new do |f| %>
		<div class="col-md-4">
			<%= f.association :polling, :include_blank => false, :class=>"form-control", label: false, input_html: { class: 'form-control' } %>
		</div>
		<div class="col-md-5">
			<%= f.association :candidate, :include_blank => false, :class=>"form-control", label: false, input_html: { class: 'form-control' }%>
		</div>
		<div class="col-md-3">
                        <%= f.hidden_field :militant_id, :value => current_user.id %>
			<%= submit_tag("Registrar Voto", class:"btn btn-primary btn-block") %>
		</div>
	<% end %>
</div>